# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your-api-key-here

# LLM Configuration (OPTIONAL - has defaults)
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Vector Store Configuration (OPTIONAL - has defaults)
VECTOR_STORE_TYPE=chromadb
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_SSL=false
CHROMA_API_KEY=

# Database Configuration (OPTIONAL - has defaults)
DATABASE_PATH=./data/orders.db

# Chunking Configuration (OPTIONAL - has defaults)
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MIN_CHUNK_SIZE=50

# Retrieval Configuration (OPTIONAL - has defaults)
RETRIEVER_TYPE=hybrid
TOP_K=5
SCORE_THRESHOLD=0.5

# Server Configuration (OPTIONAL - has defaults)
PORT=3001
CORS_ORIGIN=http://localhost:5173

# Logging (OPTIONAL - has defaults)
LOG_LEVEL=info
NODE_ENV=development

# Langfuse Configuration (OPTIONAL - for observability)
LANGFUSE_ENABLED=false
LANGFUSE_EVALUATION_ENABLED=false
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_BASE_URL="https://cloud.langfuse.com"
